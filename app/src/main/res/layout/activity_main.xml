<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo">


    <ImageView
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="263dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="1dp"
       />


    <Button
        android:id="@+id/botaoOlhos"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="322dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/botao_olho" />

    <Button
        android:id="@+id/botaoBoca"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="159dp"
        android:layout_marginTop="109dp"
        android:background="@drawable/botao_boca" />

    <Button
        android:id="@+id/botaoNariz"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="331dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/botao_nariz" />

    <Button
        android:id="@+id/botaoCabelo"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/botao_cabelo" />

    <ImageView
        android:id="@+id/imgOlhos"
        android:layout_width="match_parent"
        android:layout_height="623dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="44dp"
      />


    <ImageView
        android:id="@+id/imgBoca"
        android:layout_width="572dp"
        android:layout_height="577dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="-2dp"
      />

    <ImageView
        android:id="@+id/imgNeriz"
        android:layout_width="match_parent"
        android:layout_height="625dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
       />

    <ImageView
        android:id="@+id/imgCabelo"
        android:layout_width="529dp"
        android:layout_height="630dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="-2dp"
    />

    <Button
        android:id="@+id/botaoEnviar"
        android:layout_width="54dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="768dp"
        android:background="@drawable/send"
        android:textSize="24sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/botaoReceber"
        android:layout_width="96dp"
        android:layout_height="98dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="219dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/receive"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/screenShot"
        android:layout_width="139dp"
        android:layout_height="142dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="453dp"
        android:layout_marginBottom="717dp" />


</RelativeLayout>